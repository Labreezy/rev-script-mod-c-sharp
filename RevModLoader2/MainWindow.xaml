<Window x:Class="RevModLoader2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevModLoader2"
        mc:Ignorable="d"
        Title="Revelator Script Mod Loader MK II" Height="200" Width="400">
    <Grid>
        <Label x:Name="infoLabel" Content="Revelator Not Loaded, hit &quot;Refresh&quot; once the game is open." HorizontalAlignment="Center" Margin="10,10,10,0" VerticalAlignment="Top" Width="372" Height="68"/>
        <Button x:Name="refreshButton" Content="Refresh" HorizontalAlignment="Left" VerticalAlignment="Top" Width="372" Height="33" RenderTransformOrigin="2,3.45" Margin="10,83,0,0" Click="refreshButton_Click" FontSize="21.333"/>
        <Button x:Name="loadButton" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="372" Margin="10,121,0,0" Height="38" IsEnabled="False" FontSize="26.667" Click="loadButton_Click"/>
    </Grid>
</Window>
